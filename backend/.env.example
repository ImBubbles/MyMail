# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=postgres
DB_SSLMODE=disable

# JWT Authentication Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:3001

# HTTPS Configuration
# Set to 'true' to enable HTTPS (REQUIRES certificate files)
# Certificate files must be provided - no auto-generation
ENABLE_HTTPS=false

# HTTPS Certificate Configuration (REQUIRED if ENABLE_HTTPS=true)
# Paths are relative to the backend directory or absolute paths
# For production, use proper SSL certificates from a Certificate Authority
# Example: Generate self-signed certificates for development:
#   openssl req -x509 -newkey rsa:2048 -keyout certs/key.pem -out certs/cert.pem -days 365 -nodes
HTTPS_KEY_PATH=./certs/key.pem
HTTPS_CERT_PATH=./certs/cert.pem

# Email Configuration
HOSTNAME=localhost

# Encryption Configuration (Master key for encrypting user-specific keys)
# This master key encrypts user-specific encryption keys stored in the database.
# User-specific keys are used to encrypt:
#   - User email addresses
#   - PGP private keys (PGP public keys are stored unencrypted)
# Each user has their own encryption key, which is encrypted with this master key.
ENCRYPTION_MASTER_KEY=your-32-character-master-key-here!!

# API Key for postsmtp service
POSTSMTP_API_KEY=your-secure-api-key-here
