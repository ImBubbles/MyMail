# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=postgres
DB_SSLMODE=disable

# JWT Authentication Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:3001

# Email Configuration
HOSTNAME=localhost

# Encryption Configuration (Master key for encrypting user-specific keys)
# This key encrypts user-specific encryption keys stored in the database
ENCRYPTION_MASTER_KEY=your-32-character-master-key-here!!

# API Key for postsmtp service
POSTSMTP_API_KEY=your-secure-api-key-here
